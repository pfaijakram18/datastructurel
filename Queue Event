#include <iostream>
#include <queue>
#include <string>
using namespace std;

// Define structure for Event
struct Event {
    int id;
    string description;
};

// Function to display all pending events
void displayQueue(queue<Event> q) {
    if (q.empty()) {
        cout << "No pending events.\n";
        return;
    }

    cout << "\nPending Events:\n";
    cout << "-----------------\n";
    while (!q.empty()) {
        cout << "Event ID: " << q.front().id
             << " | Description: " << q.front().description << endl;
        q.pop();
    }
    cout << "-----------------\n";
}

int main() {
    queue<Event> eventQueue;
    int choice;
    int eventID = 1; // auto increment event ID

    do {
        cout << "\n===== Real-Time Event Processing System =====\n";
        cout << "1. Add an Event\n";
        cout << "2. Process Next Event\n";
        cout << "3. Display Pending Events\n";
        cout << "4. Cancel an Event\n";
        cout << "5. Exit\n";
        cout << "Enter your choice: ";
        cin >> choice;
        cin.ignore(); // clear input buffer

        switch (choice) {
            case 1: {
                Event e;
                e.id = eventID++;
                cout << "Enter event description: ";
                getline(cin, e.description);
                eventQueue.push(e);
                cout << "Event added successfully.\n";
                break;
            }

            case 2: {
                if (!eventQueue.empty()) {
                    Event e = eventQueue.front();
                    cout << "Processing Event ID: " << e.id
                         << " | Description: " << e.description << endl;
                    eventQueue.pop();
                } else {
                    cout << "No events to process.\n";
                }
                break;
            }

            case 3: {
                displayQueue(eventQueue);
                break;
            }

            case 4: {
                if (eventQueue.empty()) {
                    cout << "No events to cancel.\n";
                    break;
                }

                int cancelID;
                cout << "Enter Event ID to cancel: ";
                cin >> cancelID;

                queue<Event> tempQueue;
                bool found = false;

                while (!eventQueue.empty()) {
                    Event e = eventQueue.front();
                    eventQueue.pop();

                    if (e.id == cancelID) {
                        cout << "Event ID " << e.id << " canceled successfully.\n";
                        found = true;
                    } else {
                        tempQueue.push(e);
                    }
                }

                eventQueue = tempQueue;

                if (!found)
                    cout << "Event not found in the queue.\n";

                break;
            }

            case 5:
                cout << "Exiting system...\n";
                break;

            default:
                cout << "Invalid choice! Please try again.\n";
        }

    } while (choice != 5);

    return 0;
}
